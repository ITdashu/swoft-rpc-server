{
    "name": "swoft/rpc-server",
    "type": "library",
    "keywords": [
        "php",
        "swoole",
        "swoft",
        "rpc"
    ],
    "description": "microservice framework base on swoole",
    "license": "Apache-2.0",
    "require": {
        "swoft/framework": "dev-component",
        "swoft/console": "dev-master",
        "swoft/http-message": "dev-master",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "eaglewu/swoole-ide-helper": "dev-master",
        "phpunit/phpunit": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "Swoft\\Rpc\\Server\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SwoftTest\\RpcServer\\": "test/Cases"
        }
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/swoft-cloud/swoft-console"
        },
        {
            "type": "git",
            "url": "https://github.com/swoft-cloud/swoft-http-message"
        },
        {
            "type": "git",
            "url": "https://github.com/swoft-cloud/framework"
        },
        {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    ],
    "scripts": {
        "test": "./vendor/bin/phpunit -c phpunit.xml"
    }
}
